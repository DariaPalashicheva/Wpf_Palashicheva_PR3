<Window x:Class="Wpf_Palashicheva_PR3.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Palashicheva_PR3"
        mc:Ignorable="d"
        Title="MultiEdit" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary Source="Dictionary1.xaml" />
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Background="{StaticResource gradient}" Grid.Column="0">
            <TextBox TextWrapping="Wrap" Text=""  VerticalAlignment="Center" Margin="0,40,0,10" Style="{StaticResource tbsmall}" SelectionChanged="TextBox_SelectionChanged" LostFocus="TextBox_LostFocus"/>
            <TextBox TextWrapping="Wrap" Text=""  VerticalAlignment="Center" Margin="0,40,0,10" Style="{StaticResource tbsmall}" SelectionChanged="TextBox_SelectionChanged" LostFocus="TextBox_LostFocus"/>
            <TextBox TextWrapping="Wrap" Text=""  VerticalAlignment="Center" Margin="0,40,0,10" Style="{StaticResource tbsmall}" SelectionChanged="TextBox_SelectionChanged" LostFocus="TextBox_LostFocus"/>
        </StackPanel>
        <StackPanel Background="{StaticResource gradient}" Grid.Column="1">
            <TextBox TextWrapping="Wrap" Text=""  VerticalAlignment="Center" Margin="0,40,0,10" Style="{StaticResource tbsmall}" SelectionChanged="TextBox_SelectionChanged" LostFocus="TextBox_LostFocus"/>
            <TextBox TextWrapping="Wrap" Text=""  VerticalAlignment="Center" Margin="0,40,0,10" Style="{StaticResource tbsmall}" SelectionChanged="TextBox_SelectionChanged" LostFocus="TextBox_LostFocus"/>
            <TextBox TextWrapping="Wrap" Text=""  VerticalAlignment="Center" Margin="0,40,0,10" Style="{StaticResource tbsmall}" SelectionChanged="TextBox_SelectionChanged" LostFocus="TextBox_LostFocus"/>
        </StackPanel>
    </Grid>
</Window>
